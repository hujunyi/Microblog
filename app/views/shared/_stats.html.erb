<% @user ||= current_user %>
<ul class="user_atten">
  <li>
  <%= link_to following_user_path(@user) do %>
    <span id='following'><%= @user.followed_users.count %></span>
    <span>following</span>
  <% end %>
  </li>
  <li>
  <%= link_to followers_user_path(@user) do %>
    <span id='followers'><%= @user.followers.count %></span>
    <span>followers</span>
  <% end %>
  </li>
  <li>
  <%= link_to following_user_path(@user) do %>
    <%= pluralize(@user.microposts.count, "micropost") %>
  <% end %>
  </li>
</ul>
