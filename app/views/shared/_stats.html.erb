<% @user ||= current_user %>   
<ul class="list-inline">       
  <li class="stats">
  <div>Following</div>
  <%= link_to following_user_path(@user) do %>
    <span id='following'><%= @user.followed_users.count %></span>
  <% end %>
  </li>
  <li class="stats">
  <div>Followers</div>     
  <%= link_to followers_user_path(@user) do %>
    <span id='followers'><%= @user.followers.count %></span>
  <% end %>
  </li>
  <li class="stats">
  <div>Posts</div>         
  <%= link_to user_path(@user) do %>
    <span id="posts-count"><%= @user.microposts.count %></span>
  <% end %>
  </li> 
</ul>   
